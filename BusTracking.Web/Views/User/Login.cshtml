@model LoginDto;
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Css {
    <link href="~/Login/css/style.css" rel="stylesheet">
    <link href="~/Login/css/montserrat-font.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Login/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
}

<div class="page-content">
    <div class="form-v10-content">
        <form class="form-detail" action="~/User/Login" method="post" enctype="multipart/form-data" id="myform">
            <div class="form-left" style="display: flex;
    align-items: center;
    justify-content: flex-start;">
                <div class="form-row" style="width: 50%;">
                    <img src="/AdminSection/img/logo1.png" alt="" width="450">
                </div>
            </div>
            <div class="form-right">
                <h2>Login</h2>
                <div class="form-row">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    <input type="text" asp-for="Email" placeholder="Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <input type="password" asp-for="Password" placeholder="Password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-checkbox">
                    <label class="container">
                        <p>Remember me?</p>
                        <input asp-for="RememberMe" type="checkbox">
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="form-row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="form-row-last">
                    <input type="submit" class="register" value="Login">
                </div>
                <div class="form-row">
                    <a href="~/User/Register" style="font-size: 15px;
    font-weight: 500;
    color: white;">
                            Register Company
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
