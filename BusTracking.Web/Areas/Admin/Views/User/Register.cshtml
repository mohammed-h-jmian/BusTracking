@model RegisterDto;
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Css {
    <link href="~/Login/css/style.css" rel="stylesheet">
    <link href="~/Login/css/montserrat-font.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Login/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
}

<div class="page-content">
    <div class="form-v10-content">
        <form class="form-detail" action="~/Admin/User/Register" method="post" enctype="multipart/form-data" id="myform" style="margin-bottom:0px;">
            <div class="form-left">
                <h2>User Infomation</h2>
                <div class="form-group">
                    <div class="form-row form-row-1">
                        <input type="text" asp-for="UserDto.FirstName" class="input-text" placeholder="First Name" required>
                        <span asp-validation-for="UserDto.FirstName" class="text-danger"></span>

                    </div>
                    <div class="form-row form-row-2">
                        <input type="text" asp-for="UserDto.LastName" class="input-text" placeholder="Last Name" required>
                        <span asp-validation-for="UserDto.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <input type="email" asp-for="UserDto.Email" placeholder="Email" required>
                    <span asp-validation-for="UserDto.Email" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <input type="text" asp-for="UserDto.PhoneNumber" placeholder="Phone Number" required>
                    <span asp-validation-for="UserDto.PhoneNumber" class="text-danger"></span>

                </div>

                @*            <div class="form-row">

                <input type="date"  placeholder="DOB" required>
                </div>*@
                <div class="form-row">
                    <input type="password" asp-for="UserDto.Password" placeholder="Password" required>
                    <span asp-validation-for="UserDto.Password" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <input type="password" asp-for="UserDto.ConfirmPassword" placeholder="Confirm password" required>
                    <span asp-validation-for="UserDto.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
            </div>

            <div class="form-right">
                <h2>Company Details</h2>
                <div class="form-row">
                    <input type="text" asp-for="CompanyDto.Name" placeholder="Company Name" required>
                    <span asp-validation-for="CompanyDto.Name" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <input type="text" asp-for="CompanyDto.Address" placeholder="Address" required>
                    <span asp-validation-for="CompanyDto.Address" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <input type="text" asp-for="CompanyDto.Facebook" placeholder="Facebook" required>
                    <span asp-validation-for="CompanyDto.Facebook" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <label style="font-size: 20px;font-weight: 500;color: white;">Logo</label>
                    <input type="file" asp-for="CompanyDto.Logo" accept="image/*" class="form-control-file" required>
                    <span asp-validation-for="CompanyDto.Logo" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <input type="text" asp-for="CompanyDto.PhoneNumber" placeholder="Phone Number" required>
                    <span asp-validation-for="CompanyDto.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <select asp-for="CompanyDto.CityId" asp-items="@(new SelectList(ViewBag.CitySelectList, "Value", "Text"))" required>
                        <option value="">Select a City</option>
                    </select>
                    <span asp-validation-for="CompanyDto.CityId" class="text-danger"></span>
                </div>

                <div class="form-checkbox">
                    <label class="container">
                        <p>I do accept the <a href="#" class="text">Terms and Conditions</a> of your site.</p>
                        <input required type="checkbox" name="checkbox">
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="form-row-last">
                    <input type="submit" name="register" class="register" value="Register">
                </div>
                <div class="form-row">
                    <a href="~/Admin/User/Login" style="font-size: 15px;
    font-weight: 500;
    color: white;">
                        Login
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
