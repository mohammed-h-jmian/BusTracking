@model UpdateLineStopPointDto;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Bootstrap core CSS-->
    <link href="~/AdminSection/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Main styles -->
    <link href="~/AdminSection/css/admin.css" rel="stylesheet">
    <!-- Icon fonts-->
    <link href="~/AdminSection/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Plugin styles -->
    <link href="~/AdminSection/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <!-- Custom styles for All pages -->
    <link href="~/AdminSection/css/custom.css" rel="stylesheet">
    <!-- Custom styles for this page -->
    <link href="~/AdminSection/vendor/dropzone.css" rel="stylesheet">
    <link href="~/AdminSection/css/date_picker.css" rel="stylesheet">

    <link rel="stylesheet" href="~/AdminSection/js/editor/summernote-bs4.css">

</head>

<body class="fixed-nav sticky-footer" id="page-top">
    <div class="content-wrapper">

        <div class="container-fluid">
            <form action="~/Admin/LineStopPoint/Edit" method="post" enctype="multipart/form-data">
                <div class="modal fade" id="edit_line_modal" tabindex="-1" role="dialog" aria-labelledby="cedit_line_modalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="edit_line_modalLabel">Create New Line</h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <input hidden required asp-for="Id" value="@ViewBag.Id">
                                <div class="form-group">
                                    <label>Time Access</label>
                                    <input required asp-for="TimeAccess" type="time" class="form-control">
                                </div>
                                <!-- /Row -->
                                <div class="form-group">
                                    <label>Order</label>
                                    <input required asp-for="Order" type="number" class="form-control" value="@ViewBag.Order">
                                </div>

                            </div>


                            <div class="modal-footer">
                                <button type="submit" class="btn_1 medium">Create</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>


    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/AdminSection/vendor/jquery/jquery.min.js"></script>
    <script src="~/AdminSection/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/AdminSection/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Page level plugin JavaScript-->
    <script src="~/AdminSection/vendor/chart.js/Chart.js"></script>
    <script src="~/AdminSection/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/AdminSection/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/AdminSection/vendor/jquery.magnific-popup.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/AdminSection/js/admin.js"></script>
    <!-- Custom scripts for this page-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/AdminSection/vendor/dropzone.min.js"></script>
    <script src="~/AdminSection/vendor/bootstrap-datepicker.js"></script>
    <script>
        $('input.date-pick').datepicker();
    </script>
    <!-- WYSIWYG Editor -->
    <script src="~/AdminSection/js/editor/summernote-bs4.min.js"></script>
    <script>
        $('.editor').summernote({
            fontSizes: ['10', '14'],
            toolbar: [
                // [groupName, [list of button]]
                ['style', ['bold', 'italic', 'underline', 'clear']],
                ['font', ['strikethrough']],
                ['fontsize', ['fontsize']],
                ['para', ['ul', 'ol', 'paragraph']]
            ],
            placeholder: 'Write here ....',
            tabsize: 2,
            height: 200
        });
    </script>
</body>


</html>











