    <script>
        function formatDateTime(dateTimeString) {
            const dateTime = new Date(dateTimeString);
            const now = new Date();

            if (dateTime.toDateString() === now.toDateString()) {
                // If it's the same day, format as hour and minute
                return dateTime.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            } else {
                // If it's another day, format as a beautiful date
                return dateTime.toLocaleDateString([], { year: 'numeric', month: 'short', day: 'numeric' });
            }
        }
        

        function truncateText(text, maxLength) {
            if (text.length > maxLength) {
                return text.substring(0, maxLength) + '...'; // Truncate the text and add ellipsis
            } else {
                return text; // Return the original text if it's shorter than maxLength
            }
        }
        function updateAlertsContainer() {
            $.ajax({
                url: '/Admin/Notification/GetLast', // Replace with the actual URL of your server-side method
                type: 'GET',
                dataType: 'json', // Expect JSON data from the server
                success: function (data) {
                    var html = ''; // Prepare the HTML content to update the "alertsContainer"

                    // Loop through the data and create the HTML structure for each notification
                    for (var i = 0; i < data.length; i++) {
                        html += '<a class="dropdown-item" href="#">';
                        html += '<span class="text-success">';
                        html += '<strong>' + data[i].subject + '</strong>';
                        html += '</span>';
                        html += '<span class="small float-right text-muted">' + formatDateTime(data[i].createdAt) + '</span>';
                        html += '<div class="dropdown-message small">' + truncateText(data[i].text, 50) + '</div>';
                        html += '</a>';
                        html += '<div class="dropdown-divider"></div>';
                    }

                    // Update the "alertsContainer" with the new HTML content
                    $('#alertsContainer').html(html);
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }

        // Call the function initially to load the data
        updateAlertsContainer();

        // Call the function every 5 seconds using setInterval
        setInterval(function () {
            updateAlertsContainer();
        }, 5000); // 5000 milliseconds = 5 seconds
    </script>
    }
